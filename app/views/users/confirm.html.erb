<h1>Sign Up Confirmation</h1>
<br>
<h3>Are you sure these values are correct?</h3>
<br>
<h3>Email: <%= @user.email %></h3>
<h3>Name: <%= @user.name %></h3>
<br>
<br>
<row>
  <div class="col-md-1">
    <%= button_to "Yes", {:controller => "users", :action => "create", :params => params}, class: 'btn btn-lg btn-success' %>
  </div>
  <div class="col-md-1">
  <%= button_to "No", {:controller => "users", :action => "new", :params => params}, class: 'btn btn-lg btn-default' %>
  </div>
</row>
