<h1><%= @question.title %></h1>
<br>
  <% if @question.resolved %>
    <p><strong>Resolved?:</strong><span style="color:green"><%= " #{@question.resolved}".upcase %></span></p>
  <% else %>
    <p><strong>Resolved?:</strong><span style="color:orange"><%= " #{@question.resolved}".upcase %></span></p>
  <% end %>

<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Delete Question", @question, method: :delete,class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
  </div>
</div>
